package com.dipak.dao;
import java.io.IOException;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import com.dipak.beans.User;
import com.dipak.connection.DBConnection;
import com.dipak.util.PasswordUtil;

public class UserRegistrationDao {
	
	private  static boolean FLAG=false;
	
	public static boolean saveUser(User user) throws SQLException, ClassNotFoundException, IOException
	{
		Connection  con=DBConnection.getConnection();
		
		PasswordUtil pass=new PasswordUtil();
		
			
		
		PreparedStatement st = con.prepareStatement("insert into userregister values(?,?,?,?,?,?,?)");
  
		st.setString(1,user.getAccType());
		st.setString(2,user.getUserEmail());
		st.setString(3,user.getUsername());
		st.setString(4,user.getPassword());
		st.setString(5,user. getGender());
		st.setString(6, pass.generateSecurePassword(user.getPassword(), pass.getSalt(20)));
		st.setString(7, pass.getSalt(20));
		
		FLAG=st.execute();
		return FLAG;
		
	}
	

}
