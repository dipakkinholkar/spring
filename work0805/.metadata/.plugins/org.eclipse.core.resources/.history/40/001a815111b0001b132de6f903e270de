package com.dipak.connection;

import java.io.FileInputStream;
import java.sql.Connection;
import java.util.Properties;

public class DBConnection {
	
	
	private Connection getConnection() throw Exception
	{
		FileInputStream fis=new FileInputStream("property.properties");
		
		Properties property=new Properties();
		
		property.load(fis);
		
		String classname=(String) property.get("classname");
		String url=(String) property.get("url");
		
		
		
	}
	
	

}
